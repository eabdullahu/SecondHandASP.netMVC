@page
@model SecondHand.Areas.Identity.Pages.Account.Manage.EditProductModel
@{
}
<div class="add_product toogle_profile">
    @if (!Model.hasProduct)
    {
        <h3>Add product</h3>
        <p>Adding products to your store</p>

    }
    else
    {
        <h3>Edit product</h3>
        <p>Feel free to edit your product</p>
    }


<form method="post" enctype="multipart/form-data">
    <div class="add_products">

        <div class="img_add">

            <input hidden value="@ViewData["productId"]" asp-for="Input.productId" />

            <div class="box-img img_holder">
                <img src="~/images/products/@ViewData["productImg"]" />
            </div>
        </div>
        <div class="inpt_add">
            <div>
                <label asp-for="Input.productTitle">Product name</label>
                <input asp-for="Input.productTitle" value="@ViewData["productName"]">
            </div>
            <div class="two-inpts">
                <div>
                    <label asp-for="Input.productPrice">Product Price</label>
                    <div class="input-icon">
                        <input asp-for="Input.productPrice" min="1" type="number" class="form-control" placeholder="00.00" value="@ViewData["productPrice"]">
                        <i>€</i>
                    </div>
                </div>
                <div>
                    <label asp-for="Input.productDiscount">Discount</label>
                    <div class="input-icon">
                        <input type="number" asp-for="Input.productDiscount" min="0" class="form-control" placeholder="00.00" value="@ViewData["productDiscount"]">
                        <i>€</i>
                    </div>
                </div>

            </div>
            <div class="two-inpts">
                <div>
                    <label asp-for="Input.productShippingPrice">Product Price</label>
                    <div class="input-icon">
                        <input asp-for="Input.productShippingPrice" type="number" min="0" class="form-control" placeholder="00.00" value="@ViewData["productShippingPrice"]">
                        <i>€</i>
                    </div>
                </div>
                <div>
                    <label asp-for="Input.productStock">Stock</label>
                    <div class="input-icon">
                        <input type="number" min="1" asp-for="Input.productStock" class="form-control" placeholder="1" value="@ViewData["productStock"]">
                    </div>
                </div>
            </div>

            <div class="two-inpts">
                <div>
                    <label asp-for="Input.productSize">Product Size</label>
                    <div class="input-icon">
                        <input asp-for="Input.productSize" type="text" class="form-control" placeholder="M" value="@ViewData["productSize"]">
                    </div>
                </div>
            </div>
            <div class="two-inpts">
                <input type="submit" class="sign_in_button" asp-for="Input.type" value="update" />
                <span class="delete-prd">Delete</span>
            </div>
        </div>
    </div>
    <div class="dpop_container" id="delete_msg">
        <div class="delete_popup">
            <div class="dlt_msg">
                <span class="exit_delete out-msg"><i class="fas fa-times"></i></span>
