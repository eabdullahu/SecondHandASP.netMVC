                    <span asp-validation-for="contentCategory"></span>
                </div>
            </div>
            <div class="inputContainer g50">
                <div>
                    <p>contentTitle</p>
                    <input asp-for="contentTitle" class="input" />
                    <span asp-validation-for="contentTitle"></span>
                </div>
                <div>
                    <p>contentDesc</p>
                    <input asp-for="contentDesc" class="input" />
                    <span asp-validation-for="contentDesc"></span>
                </div>
            </div>
            <div class="inputContainer g50">
                <div>
                    <p>contentImg</p>
                    <input asp-for="contentImg" class="input" />
                    <span asp-validation-for="contentImg"></span>
                </div>
                <div>
                    <p>contentIcon</p>
                    <input asp-for="contentIcon" class="input" />
                    <span asp-validation-for="contentIcon"></span>
