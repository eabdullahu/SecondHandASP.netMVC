        </div>
        <div class="second">
            <div class="inputContainer justify-content-end m-t-20">
                <input type="submit" name="submit" class="input width100 outline-badge-green shadow" value="Save Changes">
            </div>
            <div class="inputContainer justify-content-end m-t-20">
                <a asp-action="Index" class="input width100 outline-badge-blue shadow costumeBackLink">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
